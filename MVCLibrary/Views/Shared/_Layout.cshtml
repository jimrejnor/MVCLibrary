<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Library</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><img src="/images/logo.jpg" width ="80"/></p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Town", "Index", "Town")</li>
                            <li>@Html.ActionLink("Author", "Index", "Author")</li>
                            <li>@Html.ActionLink("Book", "Index", "Book")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - MVC Library Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        
        <script src="~/Scripts/angular/angular.js" type="text/javascript"></script>
        <script src="~/Scripts/angular/angular-route.js" type="text/javascript"></script>
        <script src="~/Scripts/angular/angular-animate.js" type="text/javascript"></script>
        <script src="~/Scripts/app/app.js" type="text/javascript"></script>

        <script src="~/Scripts/app/other/animations.js" type="text/javascript"></script>
        <script src="~/Scripts/app/other/filters.js" type="text/javascript"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>
